<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="300dp"

            android:layout_height="300dp"
            android:src="@drawable/ic_bug_report_black_24dp"
            android:id="@+id/foto" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.091"/>
    <Button
            android:text="Tomar foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/btnTomarFoto" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="76dp"
            android:layout_marginTop="96dp" app:layout_constraintTop_toBottomOf="@+id/foto"/>
    <Button
            android:text="Agregar Foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAgregarFoto" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="64dp"
            android:layout_marginTop="96dp" app:layout_constraintTop_toBottomOf="@+id/foto"/>
</android.support.constraint.ConstraintLayout>